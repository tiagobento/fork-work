<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <ui:with field="i18n" type="org.kie.workbench.common.screens.datamodeller.client.resources.i18n.Constants"/>

    <b:FormGroup>
        <b:FormLabel ui:field="valueLabel"/>
        <b:InputGroup>
            <b:TextBox ui:field="valueTextBox"/>
            <b:InputGroupButton>
                <b:Button ui:field="editButton" text="{i18n.advanced_domain_annotation_list_editor_action_edit}"/>
                <b:Button ui:field="clearButton" text="{i18n.advanced_domain_annotation_list_editor_action_clear}"/>
            </b:InputGroupButton>
        </b:InputGroup>
    </b:FormGroup>

</ui:UiBinder>