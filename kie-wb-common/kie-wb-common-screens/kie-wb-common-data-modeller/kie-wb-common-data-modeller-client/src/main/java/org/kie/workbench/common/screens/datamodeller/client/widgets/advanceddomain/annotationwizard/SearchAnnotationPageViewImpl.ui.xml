<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <ui:with field="i18n" type="org.kie.workbench.common.screens.datamodeller.client.resources.i18n.Constants"/>

    <b:FormGroup ui:field="searchGroup">
        <b:FormLabel for="className" showRequiredIndicator="true" text="{i18n.advanced_domain_wizard_search_page_search_field}" addStyleNames="col-md-5"/>

        <b:Column size="MD_7">
            <b:InputGroup>
                <b:TextBox b:id="className" ui:field="annotationClassName" placeholder="{i18n.advanced_domain_wizard_search_page_search_field_place_holder}"/>
                <b:InputGroupButton>
                    <b:Button ui:field="searchAnnotationButton" icon="SEARCH"/>
                </b:InputGroupButton>
            </b:InputGroup>

            <b:HelpBlock ui:field="annotationClassNameHelpBlock"/>
        </b:Column>
    </b:FormGroup>

</ui:UiBinder>

