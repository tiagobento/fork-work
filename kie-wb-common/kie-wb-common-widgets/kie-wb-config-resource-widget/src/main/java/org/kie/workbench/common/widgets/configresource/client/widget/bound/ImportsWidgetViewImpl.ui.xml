<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:bgwt="urn:import:org.gwtbootstrap3.client.ui.gwt">

  <ui:with field="i18n" type="org.kie.workbench.common.widgets.configresource.client.resources.i18n.ImportConstants"/>

  <ui:style>
    .container {
      margin-top: 20px;
    }

    .icon {
      float: left;
      padding-right: 20px;
    }
  </ui:style>

  <b:Container fluid="true" addStyleNames="{style.container}">
    <g:VerticalPanel width="100%">
      <b:Well>
        <b:Container fluid="true">
          <b:Icon type="INFO_CIRCLE" size="TIMES3" addStyleNames="{style.icon}"/>
          <b:Heading size="H5" text="{i18n.importedDataObjectsExplanation}"/>
        </b:Container>
      </b:Well>
      <b:Button ui:field="addImportButton" icon="PLUS" type="PRIMARY" text="{i18n.NewItem}"/>
      <bgwt:CellTable ui:field="table"/>
    </g:VerticalPanel>
  </b:Container>

</ui:UiBinder>
