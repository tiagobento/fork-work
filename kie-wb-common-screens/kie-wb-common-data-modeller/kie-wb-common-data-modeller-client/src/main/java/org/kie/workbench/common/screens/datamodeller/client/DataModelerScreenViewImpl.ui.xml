<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:gwt="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
        >

    <ui:with field="i18n" type="org.kie.workbench.common.screens.datamodeller.client.resources.i18n.Constants"/>

    <ui:style>

        .container {
            padding-top: 20px;
            padding-bottom: 20px;
        }
        
        .dataObjectPanel {
            min-width: 400px;
        }
        
        .domainContainerPanel {
            min-width: 320px;
        }

    </ui:style>

    <b:Container fluid="true">
        <b:Row addStyleNames="{style.container}">
            <b:Column size="MD_6" addStyleNames="{style.dataObjectPanel}" ui:field="dataObjectPanel">
            </b:Column>
            <b:Column size="MD_6" addStyleNames="{style.domainContainerPanel}">
                <b:Legend ui:field="domainContainerTitle"/>
                <gwt:FlowPanel ui:field="domainContainerPanel"/>
            </b:Column>
        </b:Row>
    </b:Container>

</ui:UiBinder>

