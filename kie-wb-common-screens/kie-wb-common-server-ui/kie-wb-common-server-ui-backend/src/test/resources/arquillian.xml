<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xmlns="http://jboss.org/schema/arquillian"
            xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

  <!-- Use Servlet 3.0 -->
  <defaultProtocol type="Servlet 3.0"/>

  <container qualifier="wildfly-managed" default="true">
    <configuration>
      <property name="jbossHome">${jboss.home}</property>
      <property name="javaVmArguments">-Xmx1500m -Dorg.uberfire.nio.git.daemon.enabled=false -Dorg.uberfire.nio.git.ssh.enabled=false -Dorg.kie.server.mode=PRODUCTION</property>
    </configuration>
  </container>


  <group qualifier="wildfly-multinode">
    <container qualifier="wildfly-node1" default="true">
      <configuration>
        <property name="jbossHome">${jboss.home.instance1}</property>
        <property name="javaVmArguments">-Xmx1500m -Dorg.uberfire.nio.git.daemon.enabled=false -Dorg.uberfire.nio.git.ssh.enabled=false -Dorg.kie.server.mode=PRODUCTION
          -Dorg.kie.server.location=http://localhost:8230/kie-server/services/rest/server
          -Dorg.kie.server.user=admin
          -Dorg.kie.server.pwd=admin
          -Dorg.uberfire.nio.git.dir=target/.niogit-multinode
          -Dappformer.ssh.keys.storage.folder=target/.security-multinode
        </property>
        <property name="serverConfig">standalone-full.xml</property>
      </configuration>
    </container>
    <container qualifier="wildfly-node2" mode="manual">
      <configuration>
        <property name="jbossHome">${jboss.home.instance2}</property>
        <property name="javaVmArguments">-Xmx1500m -Dorg.uberfire.nio.git.daemon.enabled=false -Dorg.uberfire.nio.git.ssh.enabled=false -Djboss.socket.binding.port-offset=150 -Dorg.kie.server.mode=PRODUCTION
          -Dorg.kie.server.controller=http://localhost:8080/workbench/rest/controller
          -Dorg.kie.server.controller.pwd=admin
          -Dorg.kie.server.controller.user=admin
          -Dorg.kie.server.id=wildfly-multinode-kie-server
        </property>
        <property name="managementPort">10140</property>
        <property name="serverConfig">standalone-full.xml</property>
      </configuration>
    </container>
  </group>


  <container qualifier="wildfly-embedded-rest">
    <configuration>
      <property name="jbossHome">${jboss.home}</property>
      <property name="javaVmArguments">-Xmx1500m -Dorg.kie.server.location=http://localhost:8080/kie-server/services/rest/server -Dorg.kie.server.repo=target/ -Dorg.kie.server.controller=http://localhost:8080/workbench/rest/controller -Dorg.uberfire.nio.git.daemon.enabled=false -Dorg.uberfire.nio.git.ssh.enabled=false -Dorg.kie.server.mode=PRODUCTION
        -Dorg.kie.server.user=admin
        -Dorg.kie.server.pwd=admin
        -Dorg.uberfire.nio.git.dir=target/.niogit-embedded-rest
        -Dappformer.ssh.keys.storage.folder=target/.security-embedded-rest
        -Dorg.kie.server.id=it-test-kie-server
      </property>
      <property name="serverConfig">standalone-full.xml</property>
    </configuration>
  </container>

  <container qualifier="wildfly-embedded-websocket">
    <configuration>
      <property name="jbossHome">${jboss.home}</property>
      <property name="javaVmArguments">-Xmx1500m -Dorg.kie.server.location=http://localhost:8080/kie-server/services/rest/server -Dorg.kie.server.repo=target/ -Dorg.kie.server.controller=ws://localhost:8080/workbench/websocket/controller -Dorg.uberfire.nio.git.daemon.enabled=false -Dorg.uberfire.nio.git.ssh.enabled=false -Dorg.kie.server.mode=PRODUCTION
        -Dorg.kie.server.user=admin
        -Dorg.kie.server.pwd=admin
        -Dorg.uberfire.nio.git.dir=target/.niogit-embedded-websocket
        -Dappformer.ssh.keys.storage.folder=target/.security-embedded-websocket
        -Dorg.kie.server.id=it-test-kie-server
      </property>
      <property name="serverConfig">standalone-full.xml</property>
    </configuration>
  </container>

  <container qualifier="wildfly-standalone-websocket">
    <configuration>
      <property name="jbossHome">${jboss.home}</property>
      <property name="javaVmArguments">-Xmx1500m -Dorg.kie.server.location=http://localhost:8080/kie-server/services/rest/server -Dorg.kie.server.repo=target/ -Dorg.kie.server.controller=ws://localhost:8080/kie-server-controller/websocket/controller -Dorg.kie.workbench.controller=ws://localhost:8080/kie-server-controller/websocket/controller -Dorg.kie.server.controller.templatefile=target/template_store.xml -Dorg.uberfire.nio.git.daemon.enabled=false -Dorg.uberfire.nio.git.ssh.enabled=false -Dorg.kie.server.mode=PRODUCTION
        -Dorg.kie.server.user=admin
        -Dorg.kie.server.pwd=admin
        -Dorg.uberfire.nio.git.dir=target/.niogit-standalone-websocket
        -Dappformer.ssh.keys.storage.folder=target/.security-standalone-websocket
        -Dorg.kie.server.id=it-test-kie-server
      </property>
      <property name="serverConfig">standalone-full.xml</property>
    </configuration>
  </container>
</arquillian>